{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "functions": {
    "api/mercadopago-webhook.js": {
      "maxDuration": 10
    },
    "api/mercadopago-create-payment.js": {
      "maxDuration": 15
    },
    "api/mercadopago-test.js": {
      "maxDuration": 10
    },
    "api/mercadopago-qr-code.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "MERCADOPAGO_ACCESS_TOKEN": "@mercadopago_access_token"
  }
}
